h1
    font-family 'Montserrat', sans-serif
    font-size 25px
    font-weight 600
    margin 30px 0 20px 0
    text-transform uppercase

.banner
    height 860px
    position relative
    top -60px
    display flex
    justify-content center
    align-items center
    margin-bottom -60px
    overflow hidden
    .frases
        display none
    p
        width 100%
        display block
        text-align center

.videoContainer
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    bottom 0
    right 0
    display flex
    flex-direction column
    justify-content center
    align-items center

    @media screen and (min-width 1200px)
        iframe
            width: 100%;
            height: 100%;
            transform: scale(1.5);

    @media screen and (min-width 1367px)
        overflow hidden
        iframe
            width: 100%;
            height: calc(119% + 37%);
            transform: scale(1.32);

    

.produtos
    height 180px
    background #FAFAFA
    display flex
    justify-content center
    align-items center
    font-family 'Montserrat', sans-serif
    font-size 14px
    font-weight 400
    color #131313

    p
        font(Montserrat, 14px, 700, $black-two, center)
    .image
        width 100%
        height 70px
        display flex
        justify-content center
        align-items center

.institucional
    font-family 'Montserrat', sans-serif
    font-size 25px
    font-weight 400
    color #131313
    .sobre
        margin 80px auto
    h2
        font-family 'Montserrat', sans-serif
        font-size 25px
        font-weight 600
        margin 30px 0 20px 0
        text-transform uppercase
    p
        font-family 'Montserrat', sans-serif
        font-size 14px
        font-weight 400
        line-height 2.14
        letter-spacing -0.20px
    .button-orange
        width 135px
        height 30px
        line-height 30px
        font-size 12px
        display block
        background #FC551E
        color #FFFFFF
        text-align center
        margin-top 30px
    .valores
        margin-bottom 30px
        h1
            margin-bottom 40px
        img
            width 100%
            height auto
            margin-bottom 30px

.conheca
    background #FAFAFA
    padding 30px 0px
    h1
        margin-bottom 40px
    .image
        display block
        overflow hidden
        img
            transition transform .5s ease
        &:hover
            img
                transform scale(1.1)
    h2
        font-family 'Montserrat', sans-serif
        font-size 20px
        font-weight 600
        text-transform uppercase
        text-align center
        margin-top 20px

.videos
    padding 30px 0px
    h1
        margin-bottom 40px
    p
        margin-top 15px

.video
    iframe
        display none
    .thumb
        position relative
        max-height 230px
        overflow hidden
        display flex
        justify-content center
        align-items center

        img
            max-width 100%
            object-fit contain

            
        > i
            content ""
            width 60px
            height 60px
            display block
            position absolute
            cursor pointer
            top 90px
            left 180px
            background url('../images/icn-sprite.png') 0px -37px no-repeat
            transition transform 200ms linear

            &:hover
                transform scale(1.25)
    &.play
        .thumb
            display none
        iframe
            display block
