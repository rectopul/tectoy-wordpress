@import url(css/bootstrap.min.css);
@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
article, aside, figure, footer, header, hgroup, nav, section
    display block

a:link,
a:active,
a:visited,
a:hover
    text-decoration none
    color #323232

img
    border 0

body
    margin 0
    font-family 'Work Sans', sans-serif

ul, li
    margin 0px
    padding 0px
    list-style none

.hidden
    display none

header > .row,
footer > .row,
.middle .row
    width 1300px
    margin 0 auto

header
    height 60px
    position relative
    z-index 99
    .navbar
        font-family 'Montserrat', sans-serif
        font-weight 500
        font-size 12px
        color #FFF
        text-align center
    .navbar-light
        .navbar-nav
            .nav-link
                color #FFF
                height 45px
                align-items center
                display flex
                padding-left 27.5px
                padding-right 27.5px
                text-transform uppercase
                &:hover
                    color #FFF
                &.button-orange
                    width 140px
                    height 44px
                    color #FFF
                    background #FC551E
                    border 1px solid #FC551E
                    text-align center
                    justify-content center
                    &:hover
                        color #FC551E
                        background none
                        border 1px solid #FC551E
            .nav-item
                &:last-child
                    margin-left 50px
            .active
                & > .nav-link
                    color #2E2C7B
    .navbar-collapse
        &.show
            .navbar-nav
                .nav-item
                    &:last-child
                        border-bottom none

.language
    height 45px
    display flex
    justify-content center
    align-items center
    a
        width 31px
        height 21px
        margin-left 10px
        display block
        background-image url('../images/icn-sprite.png')
        background-repeat no-repeat
        &:first-child
            margin-left 0
    .portugues
        background-position 0 0
    .espanhol
        background-position -41px 0
    .ingles
        background-position -82px 0
