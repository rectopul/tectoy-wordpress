.btn-vote
    width 265px
    padding 0
    height 77px

    &:hover
        color color4 
        svg
            fill color4
    svg
        fill white
        width 26.4px
        height 23.7px


.modal-video
    .modal-dialog
        max-width 900px

.video
    &__iframe
        position: relative
        padding-bottom: 56.25%; /* 16:9 */
        height: 0;

        iframe
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%

.videos
    &__item

        margin-top 50px
        margin-bottom 50px

        a
            display flex
            background-color color4
            justify-content center
            align-items center
            height 77px
            border-radius 5px
            margin-top 25px
            margin-bottom 25px
            border 2px solid color4
            font(SpaceGrotesk, 2rem, bold, white, 1, center)

            svg
                fill white
                width 26.4px
                height 23.7px
                margin-left 15px
            

            &:hover
                border-color color1
                color color1
                text-decoration none

                svg

                    fill color1

        figure,
        .wp-block-embed__wrapper
            height 100%
            margin 0
            border-radius 5px

        .wp-block-embed__wrapper
            overflow hidden

        h5
            font(SpaceGrotesk, 1.5rem, bold, color4, 1, left)
        h4
            font(SpaceGrotesk, 1.5rem, bold, color1, 1, left)
            margin-top 10px

        

        > figure
            position relative
            height 230px
            margin-bottom 25px

            > span
                width 100%
                height 100%
                left 0
                top 0
                background-color rgba(0,0,0,0.4)
                position absolute
                z-index 2
                cursor pointer
                display flex
                justify-content center
                align-items center

                svg
                    fill white
                    width 53px
                    height 37px
                    display none

                &:hover
                    svg
                        display block
