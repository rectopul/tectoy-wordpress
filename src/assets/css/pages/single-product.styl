html
    body
        .read-more
            font-family WorkSans
            font-size .9rem
            font-weight 600
            text-align justify
            color $windows-blue
            text-decoration underline
            svg
                width 7px
                height 14px
                fill $windows-blue
                transform rotate(90deg)
                margin-left 8px

        .single-product

            &__content
                h4
                    margin-bottom 17px

                p
                    margin-bottom 17px

                table
                    margin-bottom 50px
                    tr
                        font-weight 400
                        font-stretch normal
                        font-style normal
                        line-height normal
                        letter-spacing normal
                        color $black
                        font-size .85rem
                        height 40px
                        padding 0 25px
                        &:nth-child(odd)
                            background-color $pale-grey-two

                        td
                            padding 0 25px
                            &:last-child
                                color $brownish-grey
                            

            &__attributes
                &--item
                    display flex
                    

                    @media screen and (min-width 1024px)
                        justify-content center

                    figure
                        flex  0 0 auto
                        

                    article
                        flex 0 0 auto
                        max-width 280px
                        padding 0 20px
                        display flex
                        justify-content center
                        flex-direction column

                        h4
                            font-size 1.2rem
                            font-weight 500
                            font-stretch normal
                            font-style normal
                            line-height normal
                            letter-spacing normal
                            color $windows-blue
                            display inline-block
                            width auto
                            min-width 1px

                        p
                            font-size .9rem
                            font-weight 400
                            font-stretch normal
                            font-style normal
                            line-height 1.5
                            letter-spacing normal
                            color $brownish-grey
                            display flex
                            max-width 100%

            &__name
                font-size 2rem
                font-weight 600
                font-stretch normal
                font-style normal
                line-height normal
                letter-spacing normal
                color $light-navy-blue

            &__subtitle
                font-size 1.7rem
                font-weight 500
                font-stretch normal
                font-style normal
                line-height normal
                letter-spacing normal
                color $windows-blue

            &__description
                font-family WorkSans
                font-size 1rem
                font-weight 400
                font-stretch normal
                font-style normal
                line-height 1.87
                letter-spacing normal
                text-align justify
                color $brownish-grey

                p
                    margin-bottom 30px !important
                    font-family WorkSans
                    font-size 1rem
                    font-weight 400
                    font-stretch normal
                    font-style normal
                    line-height 1.87
                    letter-spacing normal
                    text-align justify
                    color $brownish-grey
                    
